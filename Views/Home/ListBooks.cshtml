@model IEnumerable<GuardarOrdenListado.Context.Books>

@{
    ViewData["Title"] = "Listado de libros";
}

<style>
    .tg-grid [tgcolumns="header"] {
        display: grid;
        grid-template-columns: 20px 100px 1fr;
    }

    .tg-grid [tgcolumns="row"] {
        display: grid;
        grid-template-columns: 20px 100px 1fr;
    }
</style>

<h1>(Usuario: @ViewBag.UserName) Listado de libros del autor @ViewBag.AuthorName</h1>

<div name="table" class="tg-grid">

    <div label-grid="header" tgcolumns="header">
		<div></div>
		<div class="alingXcenter">Id</div>
		<div class="alingVcenter">Nombre del Libro</div>
    </div>

    <div id="lista" keyList="2,@ViewBag.IdUser,@ViewBag.IdAuthor">
        @foreach (var item in Model) {
            <div class="item" data-id="@item.Id" label-grid="row" tgcolumns="row">
		        <div></div>
		        <div class="alingXcenter">@Html.DisplayFor(modelItem => item.Id)</div>
		        <div class="alingVcenter">@Html.DisplayFor(modelItem => item.NameBook)</div>
            </div>
        }
    </div>

</div>

<p class="pt-2">@Html.ActionLink("Autores", "ListAuthors", "Home", new { @IdUser = ViewBag.IdUser, @UserName = ViewBag.UserName }, new { @class = "btn btn-primary" })</p>
